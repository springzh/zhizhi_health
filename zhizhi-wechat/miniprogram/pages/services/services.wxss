/**services.wxss**/
.container {
  height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 200rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #1E88E5 0%, #43A047 100%);
  color: white;
  padding: 48rpx 32rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 服务分类 */
.service-categories {
  background: white;
  padding: 32rpx;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.category-tabs {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.category-tab {
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.category-tab.active {
  background: #1E88E5;
  color: white;
}

/* 服务列表 */
.services-list {
  padding: 0 24rpx;
}

.service-card {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.service-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.service-header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1px solid #f0f0f0;
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  background: #E3F2FD;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.service-icon image {
  width: 48rpx;
  height: 48rpx;
}

.service-info {
  flex: 1;
}

.service-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.service-category {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.service-price {
  text-align: right;
}

.price {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #FF5722;
}

.price-unit {
  font-size: 24rpx;
  color: #999;
}

.service-content {
  padding: 32rpx;
}

.service-description {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.service-features {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.feature-tag {
  background: #E8F5E8;
  color: #43A047;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.service-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 1px solid #f0f0f0;
}

.duration-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.duration-icon {
  font-size: 24rpx;
}

.duration-text {
  font-size: 24rpx;
  color: #666;
}

.booking-btn {
  background: #1E88E5;
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 空状态 */
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}