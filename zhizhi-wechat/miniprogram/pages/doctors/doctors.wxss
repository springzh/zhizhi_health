/**doctors.wxss**/
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  background: white;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input-wrapper {
  flex: 1;
  position: relative;
  background: #f5f5f5;
  border-radius: 50rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  height: 80rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  background: transparent;
}

.clear-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 15rpx;
}

.sort-btn {
  display: flex;
  align-items: center;
  padding: 15rpx 25rpx;
  background: #f5f5f5;
  border-radius: 50rpx;
  gap: 10rpx;
}

.sort-text {
  font-size: 26rpx;
  color: #666;
}

.sort-arrow {
  width: 20rpx;
  height: 20rpx;
}

/* 医生列表 */
.doctors-list {
  padding: 20rpx;
}

.doctor-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.doctor-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.doctor-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.doctor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.doctor-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.doctor-rating {
  font-size: 26rpx;
  color: #ff6b6b;
}

.doctor-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.doctor-hospital {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.doctor-specialty {
  font-size: 26rpx;
  color: #1E88E5;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.doctor-stats {
  display: flex;
  gap: 30rpx;
}

.doctor-experience,
.doctor-patients {
  font-size: 24rpx;
  color: #666;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #666;
  font-size: 28rpx;
}

.no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 排序弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
}

.sort-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  z-index: 1001;
  padding: 30rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-icon {
  width: 32rpx;
  height: 32rpx;
}

.sort-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.sort-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  border: 2rpx solid transparent;
}

.sort-option.active {
  border-color: #1E88E5;
  background: #e3f2fd;
}

.option-text {
  font-size: 28rpx;
  color: #333;
}

.check-icon {
  width: 24rpx;
  height: 24rpx;
}