/**rights-cards.wxss**/
.container {
  height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 200rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #1E88E5 0%, #43A047 100%);
  color: white;
  padding: 48rpx 32rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 通用样式 */
.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
  padding: 0 24rpx;
}

/* 我的权益卡 */
.my-cards {
  margin: 32rpx 0;
}

.cards-list {
  padding: 0 24rpx;
}

.card-item {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid transparent;
}

.card-item.active {
  border-color: #43A047;
}

.card-item.expired {
  border-color: #FF5722;
  opacity: 0.8;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1px solid #f0f0f0;
}

.card-info {
  flex: 1;
}

.card-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.card-type {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.card-status {
  text-align: right;
}

.status-text {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-text.active {
  background: #E8F5E8;
  color: #43A047;
}

.status-text.expired {
  background: #FFF3E0;
  color: #FF5722;
}

.card-content {
  padding: 32rpx;
}

.card-benefits {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.benefit-item {
  background: #E3F2FD;
  color: #1E88E5;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 1px solid #f0f0f0;
}

.validity {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.validity-label {
  font-size: 24rpx;
  color: #666;
}

.validity-date {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.card-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  background: #1E88E5;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.action-btn::after {
  border: none;
}

.action-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

/* 可购买的权益卡 */
.available-cards {
  margin: 32rpx 0;
}

.cards-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 24rpx;
  padding: 0 24rpx;
}

.available-card {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.available-card:active {
  transform: scale(0.98);
}

.card-image {
  width: 100%;
  height: 200rpx;
  position: relative;
}

.card-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card-details {
  padding: 32rpx;
}

.card-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.card-description {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.card-features {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.feature-tag {
  background: #E8F5E8;
  color: #43A047;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
}

.card-price {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.price {
  font-size: 40rpx;
  font-weight: 600;
  color: #FF5722;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.discount {
  background: #FF5722;
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.buy-btn {
  width: 100%;
  background: #1E88E5;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.buy-btn::after {
  border: none;
}

/* 权益说明 */
.rights-info {
  margin: 32rpx 0;
  padding: 0 24rpx;
}

.info-content {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  margin-bottom: 32rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.info-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}