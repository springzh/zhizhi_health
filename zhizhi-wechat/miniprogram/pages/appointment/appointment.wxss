/**appointment.wxss**/
.container {
  height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 200rpx;
}

/* 步骤指示器 */
.step-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 32rpx;
  background: white;
  border-bottom: 1px solid #e0e0e0;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
}

.step-number {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #e0e0e0;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.step.active .step-number {
  background: #1E88E5;
  color: white;
}

.step-text {
  font-size: 24rpx;
  color: #999;
  transition: color 0.3s ease;
}

.step.active .step-text {
  color: #1E88E5;
  font-weight: 500;
}

.step-line {
  width: 80rpx;
  height: 4rpx;
  background: #e0e0e0;
  margin: 0 16rpx;
  position: relative;
  top: -32rpx;
}

.step.active ~ .step-line {
  background: #e0e0e0;
}

.step.active .step-line {
  background: #1E88E5;
}

/* 步骤内容 */
.step-content {
  padding: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
}

/* 医生选择 */
.doctor-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 24rpx;
}

.doctor-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s ease;
}

.doctor-card.selected {
  border-color: #1E88E5;
  box-shadow: 0 4rpx 16rpx rgba(30, 136, 229, 0.2);
}

.doctor-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
}

.doctor-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.doctor-title {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.doctor-hospital {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.doctor-rating {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.rating-stars {
  color: #FF9800;
  font-size: 24rpx;
}

.rating-text {
  font-size: 24rpx;
  color: #666;
}

/* 服务选择 */
.selected-doctor {
  display: flex;
  align-items: center;
  gap: 24rpx;
  background: #E3F2FD;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.selected-doctor .doctor-avatar {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 0;
}

.selected-doctor .doctor-info {
  flex: 1;
}

.selected-doctor .doctor-name {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.selected-doctor .doctor-title {
  font-size: 24rpx;
  margin-bottom: 0;
}

.service-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.service-item {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s ease;
}

.service-item.selected {
  border-color: #1E88E5;
  box-shadow: 0 4rpx 16rpx rgba(30, 136, 229, 0.2);
}

.service-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.service-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.service-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.service-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #FF5722;
  margin-left: 24rpx;
}

/* 预约信息 */
.appointment-summary {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.summary-item:last-child {
  border-bottom: none;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
}

.summary-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 28rpx;
  background: white;
  transition: border-color 0.3s ease;
}

.form-input:focus {
  border-color: #1E88E5;
}

.picker-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 28rpx;
  background: white;
  color: #333;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 28rpx;
  background: white;
  resize: vertical;
}

/* 步骤操作按钮 */
.step-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
  padding-top: 32rpx;
  border-top: 1px solid #e0e0e0;
}

.btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn::after {
  border: none;
}

.btn.primary {
  background: #1E88E5;
  color: white;
}

.btn.primary:disabled {
  background: #ccc;
  color: #999;
}

.btn.secondary {
  background: #f5f5f5;
  color: #666;
}

.btn.secondary:hover {
  background: #e0e0e0;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #666;
  font-size: 28rpx;
}