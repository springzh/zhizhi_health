/**appointment.wxss**/
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

/* 医生选择 */
.doctor-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.doctor-card {
  width: calc(50% - 10rpx);
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 15rpx;
  text-align: center;
  background: #f8f9fa;
}

.doctor-card.selected {
  border-color: #1E88E5;
  background: #e3f2fd;
}

.doctor-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
}

.doctor-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.doctor-title {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 服务选择 */
.service-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.service-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 15rpx;
  background: #f8f9fa;
}

.service-item.selected {
  border-color: #1E88E5;
  background: #e3f2fd;
}

.service-name {
  font-size: 28rpx;
  color: #333;
}

.service-price {
  font-size: 28rpx;
  color: #1E88E5;
  font-weight: bold;
}

/* 表单 */
.form-group {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.form-input {
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 15rpx;
  font-size: 28rpx;
  background: #f8f9fa;
}

.form-input:focus {
  border-color: #1E88E5;
  background: white;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 15rpx;
  font-size: 28rpx;
  background: #f8f9fa;
}

.picker-input {
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 15rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  color: #333;
}

/* 提交按钮 */
.submit-section {
  margin-top: 40rpx;
}

.submit-btn {
  width: 100%;
  background: #1E88E5;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.submit-btn:disabled {
  background: #ccc;
}