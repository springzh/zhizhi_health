/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 0;
  background-color: #f5f5f5;
}

/* 轮播图 */
.banner-section {
  width: 100%;
  height: 400rpx;
}

.banner {
  width: 100%;
  height: 100%;
}

.banner-item {
  width: 100%;
  height: 100%;
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.7));
  padding: 40rpx 30rpx;
  color: white;
}

.banner-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.banner-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 快速预约入口 */
.quick-booking {
  background: white;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.booking-btn {
  width: 100%;
  background: #1E88E5;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.booking-btn::after {
  border: none;
}

.btn-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 服务分类 */
.service-categories {
  background: white;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
  color: #333;
}

.categories-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.category-icon {
  width: 96rpx;
  height: 96rpx;
  background: #E3F2FD;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-icon image {
  width: 64rpx;
  height: 64rpx;
}

.category-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 推荐医生 */
.recommended-doctors {
  background: white;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.doctor-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.doctor-card {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.doctor-card:last-child {
  border-bottom: none;
}

.doctor-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #E3F2FD;
  display: flex;
  align-items: center;
  justify-content: center;
}

.doctor-info {
  flex: 1;
}

.doctor-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.doctor-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.doctor-hospital {
  font-size: 24rpx;
  color: #999;
}

.doctor-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 8rpx;
}

.rating-stars {
  color: #FF9800;
  font-size: 24rpx;
}

.rating-text {
  font-size: 24rpx;
  color: #666;
}

.booking-btn-small {
  background: #1E88E5;
  color: white;
  border: none;
  border-radius: 32rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

.booking-btn-small::after {
  border: none;
}

/* 数据统计 */
.statistics {
  background: white;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
}

.stat-item {
  text-align: center;
  padding: 32rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 600;
  color: #1E88E5;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 热门FAQ */
.popular-faq {
  background: white;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.faq-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.faq-item {
  padding: 24rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.faq-item:last-child {
  border-bottom: none;
}

.faq-question {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.6;
}

.faq-category {
  font-size: 24rpx;
  color: #1E88E5;
  background: #E3F2FD;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
  display: inline-block;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 80rpx;
  color: #666;
  font-size: 28rpx;
}
