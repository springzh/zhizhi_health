/**consultation.wxss**/
.container {
  height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 200rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #1E88E5 0%, #43A047 100%);
  color: white;
  padding: 48rpx 32rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 通用样式 */
.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
}

/* 快速咨询入口 */
.quick-consultation {
  margin: 32rpx 24rpx;
}

.quick-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.quick-action {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.quick-action:active {
  transform: scale(0.95);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  background: #E3F2FD;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 24rpx;
}

.icon-text {
  font-size: 40rpx;
}

.action-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.action-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 选择医生 */
.select-doctor {
  margin: 32rpx 24rpx;
}

.doctor-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.doctor-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.doctor-card:active {
  transform: scale(0.98);
}

.doctor-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.doctor-info {
  flex: 1;
}

.doctor-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.doctor-title {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.doctor-hospital {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.doctor-stats {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.stat-item {
  font-size: 24rpx;
  color: #666;
}

.doctor-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ccc;
}

.status-dot.online {
  background: #43A047;
}

.status-dot.offline {
  background: #999;
}

.status-text {
  font-size: 22rpx;
  color: #666;
}

/* 咨询记录 */
.consultation-history {
  margin: 32rpx 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 0 4rpx;
}

.view-all {
  font-size: 26rpx;
  color: #1E88E5;
  font-weight: 500;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.history-item {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.history-doctor {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.history-doctor .doctor-avatar {
  width: 60rpx;
  height: 60rpx;
}

.history-doctor .doctor-info {
  margin-bottom: 0;
}

.history-doctor .doctor-name {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.consultation-type {
  font-size: 22rpx;
  color: #999;
}

.history-time {
  text-align: right;
}

.time-text {
  display: block;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.status-text {
  font-size: 22rpx;
  font-weight: 500;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.status-text.completed {
  background: #E8F5E8;
  color: #43A047;
}

.status-text.ongoing {
  background: #E3F2FD;
  color: #1E88E5;
}

.history-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 24rpx;
}

.content-text {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

.history-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  flex-shrink: 0;
}

.action-btn {
  background: #1E88E5;
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 12rpx 24rpx;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
}

.action-btn::after {
  border: none;
}

.action-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

/* 咨询说明 */
.consultation-info {
  margin: 32rpx 24rpx;
}

.info-content {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  margin-bottom: 32rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.info-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}