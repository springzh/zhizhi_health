/**faq.wxss**/
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索头部 */
.search-header {
  background: white;
  padding: 20rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-bar {
  margin-bottom: 10rpx;
}

.search-input-wrapper {
  position: relative;
  background: #f5f5f5;
  border-radius: 50rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  height: 80rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  background: transparent;
}

.close-search {
  width: 24rpx;
  height: 24rpx;
  margin-left: 15rpx;
}

.header-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.header-buttons {
  display: flex;
  gap: 20rpx;
}

.search-btn,
.consult-btn {
  width: 40rpx;
  height: 40rpx;
}

/* 热门问题 */
.popular-section {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
}

.section-header {
  margin-bottom: 25rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.popular-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.popular-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff8e1;
  border-radius: 15rpx;
  border-left: 4rpx solid #ff6f00;
}

.popular-icon {
  font-size: 24rpx;
  margin-right: 15rpx;
}

.popular-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

/* 分类筛选 */
.categories-section {
  background: white;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 20rpx;
}

.categories-scroll {
  width: 100%;
}

.categories-list {
  display: flex;
  gap: 15rpx;
  padding: 10rpx 0;
}

.category-item {
  padding: 15rpx 30rpx;
  background: #f5f5f5;
  border-radius: 50rpx;
  white-space: nowrap;
  border: 2rpx solid transparent;
}

.category-item.active {
  background: #1E88E5;
  color: white;
  border-color: #1E88E5;
}

.category-text {
  font-size: 26rpx;
  color: inherit;
}

/* FAQ列表 */
.faq-section {
  padding: 20rpx;
}

.faq-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.faq-item {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.faq-question {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  cursor: pointer;
}

.question-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-right: 20rpx;
}

.expand-icon {
  width: 24rpx;
  height: 24rpx;
  transition: transform 0.3s;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

.faq-answer {
  padding: 0 30rpx 30rpx;
  border-top: 1px solid #f0f0f0;
}

.answer-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.faq-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.faq-category {
  font-size: 24rpx;
  color: #1E88E5;
  background: #e3f2fd;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.faq-views {
  font-size: 24rpx;
  color: #999;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #666;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}