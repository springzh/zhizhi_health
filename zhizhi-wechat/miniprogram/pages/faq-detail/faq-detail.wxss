/**faq-detail.wxss**/
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  font-size: 28rpx;
  color: #666;
}

/* FAQ内容 */
.faq-content {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.faq-header {
  padding: 40rpx 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.faq-category {
  display: inline-block;
  font-size: 24rpx;
  color: #1E88E5;
  background: #e3f2fd;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.faq-question {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.faq-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.faq-views,
.faq-date {
  font-size: 24rpx;
  color: #999;
}

.faq-body {
  padding: 30rpx;
}

.answer-section {
  position: relative;
}

.answer-section:not(.expanded) {
  max-height: 300rpx;
  overflow: hidden;
}

.answer-section:not(.expanded)::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: linear-gradient(transparent, white);
}

.answer-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.expand-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  color: #1E88E5;
  font-size: 26rpx;
}

.expand-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

/* 相关推荐 */
.related-section {
  margin-top: 30rpx;
  padding: 0 30rpx 30rpx;
}

.related-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.related-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.no-related {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 40rpx;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
  background: white;
  border-radius: 20rpx;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.back-btn {
  background: #1E88E5;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}