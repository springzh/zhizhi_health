/**doctor-detail.wxss**/
.container {
  height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 200rpx;
}

/* 医生基本信息 */
.doctor-profile {
  background: white;
  padding: 40rpx;
  border-bottom: 1px solid #e0e0e0;
}

.doctor-header {
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.doctor-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #E3F2FD;
  display: flex;
  align-items: center;
  justify-content: center;
}

.doctor-info {
  flex: 1;
}

.doctor-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.doctor-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.doctor-hospital {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.doctor-rating {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.rating-stars {
  color: #FF9800;
  font-size: 28rpx;
}

.rating-text {
  font-size: 24rpx;
  color: #666;
}

.consultation-count {
  font-size: 24rpx;
  color: #999;
}

.doctor-stats {
  display: flex;
  justify-content: space-around;
  padding: 32rpx 0;
  border-top: 1px solid #f0f0f0;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 600;
  color: #1E88E5;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 标签页 */
.tabs {
  background: white;
  display: flex;
  border-bottom: 1px solid #e0e0e0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab {
  flex: 1;
  padding: 24rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  cursor: pointer;
  border-bottom: 4rpx solid transparent;
}

.tab.active {
  color: #1E88E5;
  border-bottom-color: #1E88E5;
}

/* 标签页内容 */
.tab-content {
  background: #f5f5f5;
  padding-bottom: 80rpx;
}

.tab-section {
  display: none;
}

.tab-section.active {
  display: block;
}

/* 医生简介 */
.doctor-intro {
  background: white;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #333;
}

.intro-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 擅长领域 */
.specialties {
  background: white;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
}

.specialty-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.specialty-tag {
  background: #E3F2FD;
  color: #1E88E5;
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
}

/* 服务项目 */
.services {
  background: white;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
}

.service-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.service-item:last-child {
  border-bottom: none;
}

.service-info {
  flex: 1;
}

.service-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.service-desc {
  font-size: 24rpx;
  color: #999;
}

.service-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #FF5722;
}

/* 患者评价 */
.reviews {
  background: white;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
}

.review-item {
  padding: 32rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.review-item:last-child {
  border-bottom: none;
}

.review-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 16rpx;
}

.reviewer-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
}

.reviewer-info {
  flex: 1;
}

.reviewer-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.review-date {
  font-size: 24rpx;
  color: #999;
}

.review-rating {
  color: #FF9800;
  font-size: 24rpx;
}

.review-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 预约排班 */
.schedule {
  background: white;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
}

.schedule-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.schedule-nav {
  display: flex;
  gap: 16rpx;
}

.schedule-btn {
  background: #f5f5f5;
  border: none;
  border-radius: 32rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  cursor: pointer;
}

.schedule-btn.active {
  background: #1E88E5;
  color: white;
}

.schedule-btn::after {
  border: none;
}

.date-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.time-slots {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.time-slot {
  background: #f5f5f5;
  border: 1px solid #e0e0e0;
  border-radius: 16rpx;
  padding: 16rpx;
  text-align: center;
  font-size: 24rpx;
  cursor: pointer;
}

.time-slot.available {
  background: #E8F5E8;
  border-color: #4CAF50;
  color: #2E7D32;
}

.time-slot.occupied {
  background: #FFF3E0;
  border-color: #FF9800;
  color: #F57C00;
}

.time-slot.selected {
  background: #1E88E5;
  color: white;
  border-color: #1E88E5;
}

.time-text {
  font-size: 24rpx;
}

.schedule-legend {
  margin-top: 32rpx;
  font-size: 24rpx;
  color: #666;
}

.legend-text {
  font-size: 24rpx;
  color: #666;
}

/* 底部预约栏 */
.bottom-booking {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1px solid #e0e0e0;
  padding: 24rpx 32rpx;
  display: flex;
  gap: 24rpx;
  align-items: center;
  z-index: 100;
}

.booking-price {
  flex: 1;
}

.price-label {
  font-size: 24rpx;
  color: #999;
}

.price-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #FF5722;
}

.booking-actions {
  display: flex;
  gap: 16rpx;
}

.booking-btn {
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  cursor: pointer;
}

.booking-btn::after {
  border: none;
}

.booking-btn.primary {
  background: #1E88E5;
  color: white;
}