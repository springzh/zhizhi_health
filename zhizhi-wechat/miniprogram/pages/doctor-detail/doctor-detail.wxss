/**doctor-detail.wxss**/
.container {
  height: 100vh;
  background-color: #f5f5f5;
}

/* 医生头部信息 */
.doctor-header {
  background: white;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
}

.doctor-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.doctor-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.doctor-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.doctor-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.doctor-hospital {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.doctor-stats {
  display: flex;
  gap: 20rpx;
}

.doctor-rating {
  font-size: 26rpx;
  color: #ff6b6b;
}

.doctor-experience,
.doctor-patients {
  font-size: 24rpx;
  color: #666;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 详情内容 */
.detail-content {
  padding: 20rpx;
  padding-bottom: 200rpx;
}

.section {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.section-content {
  padding: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 25rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  line-height: 1.5;
}

/* 服务项目 */
.service-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.service-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.service-name {
  font-size: 28rpx;
  color: #333;
}

.service-price {
  font-size: 28rpx;
  color: #1E88E5;
  font-weight: bold;
}

/* 个人简介 */
.bio-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 评价部分 */
.rating-summary {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.rating-score {
  font-size: 48rpx;
  font-weight: bold;
  color: #1E88E5;
  margin-right: 30rpx;
}

.rating-details {
  display: flex;
  flex-direction: column;
}

.rating-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.rating-count {
  font-size: 24rpx;
  color: #666;
}

.review-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.review-item {
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.review-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.reviewer-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.review-rating {
  font-size: 24rpx;
  color: #ff6b6b;
}

.review-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 15rpx;
}

.review-date {
  font-size: 24rpx;
  color: #999;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  border-top: 1px solid #f0f0f0;
  display: flex;
  gap: 15rpx;
  z-index: 100;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border: none;
}

.action-btn.primary {
  background: #1E88E5;
  color: white;
}

.action-btn.secondary {
  background: #f8f9fa;
  color: #666;
  border: 1px solid #e9ecef;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}