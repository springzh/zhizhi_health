/**settings.wxss**/
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  font-size: 28rpx;
  color: #666;
}

/* 设置内容 */
.settings-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.section {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

/* 表单 */
.form-group {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.form-input {
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 15rpx;
  font-size: 28rpx;
  background: #f8f9fa;
}

.form-input:focus {
  border-color: #1E88E5;
  background: white;
}

.form-input[disabled] {
  background: #f5f5f5;
  color: #999;
}

.save-btn {
  background: #1E88E5;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

/* 设置列表 */
.setting-list {
  display: flex;
  flex-direction: column;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.setting-name {
  font-size: 28rpx;
  color: #333;
}

.setting-desc {
  font-size: 24rpx;
  color: #999;
}

.setting-switch {
  transform: scale(0.9);
}

.setting-arrow {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.5;
}

/* 退出登录 */
.logout-section {
  margin-top: 40rpx;
}

.logout-btn {
  background: #ff5252;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
}