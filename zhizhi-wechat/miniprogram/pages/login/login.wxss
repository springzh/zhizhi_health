/**login.wxss**/
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1E88E5, #1565C0);
  padding: 60rpx 40rpx;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.app-slogan {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 表单区域 */
.form-section {
  background: white;
  border-radius: 30rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 登录/注册切换 */
.auth-tabs {
  display: flex;
  margin-bottom: 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.auth-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  position: relative;
}

.auth-tab text {
  font-size: 32rpx;
  color: #666;
  transition: color 0.3s;
}

.auth-tab.active text {
  color: #1E88E5;
  font-weight: bold;
}

.auth-tab.active::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #1E88E5;
  border-radius: 2rpx;
}

/* 表单内容 */
.form-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.input-group {
  position: relative;
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 50rpx;
  padding: 0 30rpx;
  height: 100rpx;
}

.input-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.input-field {
  flex: 1;
  font-size: 28rpx;
  background: transparent;
  color: #333;
}

.eye-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
}

/* 表单选项 */
.form-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: -10rpx 0;
}

.remember-me {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.checkbox-icon {
  width: 28rpx;
  height: 28rpx;
}

.remember-me text {
  font-size: 26rpx;
  color: #666;
}

.forgot-password {
  font-size: 26rpx;
  color: #1E88E5;
}

/* 提交按钮 */
.submit-btn {
  background: #1E88E5;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20rpx;
  transition: all 0.3s;
}

.submit-btn.loading {
  background: #ccc;
}

.submit-btn:disabled {
  background: #ccc;
}

/* 其他登录方式 */
.other-login {
  margin-top: 40rpx;
}

.divider {
  text-align: center;
  margin: 30rpx 0;
  position: relative;
}

.divider::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1rpx;
  background: #f0f0f0;
}

.divider-text {
  background: white;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #999;
  position: relative;
}

.wechat-login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  background: #07c160;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx;
  font-size: 28rpx;
}

.wechat-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 用户协议 */
.agreement {
  text-align: center;
}

.agreement-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
}

.agreement-link {
  color: rgba(255, 255, 255, 0.9);
  text-decoration: underline;
}